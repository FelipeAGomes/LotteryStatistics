@model IEnumerable<LotteryStatistics.Models.Numbers>
@{
    ViewData["Title"] = "Search by date";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <form class="navbar-form navbar-left" role="search">
        <div class="row">
            <div class="col">
                <label for="minDate" class="form-label">Min Date</label>
                <input type="date" class="form-control" name="minDate" value="@ViewData["minDate"]" />
            </div>
            <div class="col">
                <label for="maxDate" class="form-label">Max Date</label>
                <input type="date" class="form-control" name="maxDate" value="@ViewData["maxDate"]" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Filter</button>
    </form>
</div>

<div class="panel panel-primary">
    <div class="panel-body">
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="success">
                        <th>@Html.DisplayNameFor(model => model.ContestNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.ContestDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Number1)</th>
                        <th>@Html.DisplayNameFor(model => model.Number2)</th>
                        <th>@Html.DisplayNameFor(model => model.Number3)</th>
                        <th>@Html.DisplayNameFor(model => model.Number4)</th>
                        <th>@Html.DisplayNameFor(model => model.Number5)</th>
                        <th>@Html.DisplayNameFor(model => model.Number6)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ContestNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.ContestDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Number1)</td>
                            <td>@Html.DisplayFor(modelItem => item.Number2)</td>
                            <td>@Html.DisplayFor(modelItem => item.Number3)</td>
                            <td>@Html.DisplayFor(modelItem => item.Number4)</td>
                            <td>@Html.DisplayFor(modelItem => item.Number5)</td>
                            <td>@Html.DisplayFor(modelItem => item.Number6)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else if (!string.IsNullOrEmpty(ViewData["minDate"] as string) || !string.IsNullOrEmpty(ViewData["maxDate"] as string))
        {
            <p>No results found.</p>
        }
    </div>
</div>
